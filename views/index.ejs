<%- include("partials/header") %>

<div class="ui container postsContainer">
    <% for(var i = blogs.length-1; i >= 0; i--){ %>

    <div class="ui raised very padded text segment container">
        <h6> <%= blogs[i].created.toDateString() %> </h6>
        <h2> <%= blogs[i].title %> </h2>
        <img src="<%= blogs[i].image %>">
        <p id = "readMoreText"> <%= blogs[i].body.substring(0, 150) %>...</p>
        <a href="/blogs/<%= blogs[i]._id %>" class="btn btn-danger">Read More</a>
    </div>
    <% } %>
</div>

<%- include("partials/footer") %>