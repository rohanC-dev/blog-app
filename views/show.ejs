<%- include("partials/header") %>

<div class = "ui raised very padded text segment container" style  = "margin-top: 50px;">
    <h6> <%= blog.created %></h6>
    <h2> <%= blog.title %></h2>
    <img src = "<%= blog.image %>"/>
    <p> <%= blog.body %></p>

    <form action = "/blogs/<%= blog._id %>?_method=DELETE" method = "POST">
        <button class = "ui inverted red button">DELETE</button>
        <a href = "/blogs/<%= blog._id %>/edit" class = "ui blue inverted button">Edit</a>
    </form>

</div>

<%- include("partials/footer") %>